<Window x:Class="PROJECT_FINAL_PRN221_GROUP3_SE1610.CartWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PROJECT_FINAL_PRN221_GROUP3_SE1610"
        mc:Ignorable="d"
        Title="CartWindow" Height="450" Width="944" Background="LightBlue">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="223*"/>
            <ColumnDefinition Width="685*"/>
        </Grid.ColumnDefinitions>
        <Button x:Name="btnCheckout" Content="Thanh toán" IsEnabled="False" HorizontalAlignment="Left" Margin="72,53,0,0" VerticalAlignment="Top" Height="37" Width="121" FontSize="16" Click="btnCheckout_Click"/>
        <Label x:Name="lblTotal" Content="Tổng tiền:" HorizontalAlignment="Left" Margin="65,369,0,0" VerticalAlignment="Top" FontWeight="Bold" FontSize="24" Grid.Column="1"/>
        <TextBox x:Name="txtTotal" HorizontalAlignment="Left" Margin="190,374,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" FontSize="22" Grid.Column="1"/>
        <ListView Margin="42,113,27,70" Name="lvCart" Grid.ColumnSpan="2" >
            <ListView.View>
                <GridView>

                    <GridViewColumn Header="MilkId" Width="100" DisplayMemberBinding="{Binding Path=MilkId}" />
                    <GridViewColumn Header="Tên" Width="280" DisplayMemberBinding="{Binding Path=Milk.Name}" />
                    <GridViewColumn Header="Giá tiền" Width="100" DisplayMemberBinding="{Binding Path=Milk.Price}" />
                    <GridViewColumn Header="Số lượng" Width="100" DisplayMemberBinding="{Binding Path=Quantity}" />
                    <GridViewColumn Header="Ngày đặt" Width="170" DisplayMemberBinding="{Binding Path=DateCreate}" />
                    <GridViewColumn Header="Xóa khỏi giỏ hàng" Width="100">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <Button
                       Content="Remove from cart"
                       Margin="0"
                       VerticalAlignment="Center"
                                    Click="btnRemove_Click"
                                    CommandParameter="{Binding}"
                                />
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>


                </GridView>

            </ListView.View>

        </ListView>

    </Grid>
</Window>
